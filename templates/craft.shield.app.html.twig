{% extends "craft.app.html.twig" %}

{% block title %}
	{{ parent() }} - Niveaux d'Artisanat en boucliers
{% endblock title %}

{% block pageTitle %}
	Niveaux d'Artisanat en boucliers
{% endblock pageTitle %}

{% block craftSkill %}
	<div class="top">
		<table class="skill-table">
			<tr>
				<td>Nom</td>
				<td>Grand bouclier</td>
				<td>Rondache</td>
			</tr>
		{% for homin in homins %}
			<tr>
				<td>{{ homin.name }}</td>
			{% if homin.error %}
				<td>X</td>
				<td>X</td>
			{% else %}
				<td class="lvl-{{ homin.lvls.armureBBouclier }}">{{ homin.lvls.armureBBouclier }}</td>
				<td class="lvl-{{ homin.lvls.armureBRondache }}">{{ homin.lvls.armureBRondache }}</td>
			{% endif %}
			</tr>
		{% endfor %}
		</table>
	</div>
{% endblock %}