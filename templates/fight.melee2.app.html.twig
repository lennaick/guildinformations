{% extends "fight.app.html.twig" %}

{% block title %}
	{{ parent() }} - Niveaux de Combat à deux mains
{% endblock title %}

{% block pageTitle %}
	Niveaux de Combat à deux mains
{% endblock pageTitle %}

{% block fightSkill %}
	<div class="top">
		<table class="skill-table">
			<tr>
				<td>Nom</td>
				<td>Epée</td>
				<td>Hache</td>
				<td>Masse</td>
				<td>Pique</td>
			</tr>
		{% for homin in homins %}
			<tr>
				<td>{{ homin.name }}</td>
			{% if homin.error %}
				<td>X</td>
				<td>X</td>
				<td>X</td>
				<td>X</td>
			{% else %}
				<td class="lvl-{{ homin.lvls.epee2 }}">{{ homin.lvls.epee2 }}</td>
				<td class="lvl-{{ homin.lvls.hache2 }}">{{ homin.lvls.hache2 }}</td>
				<td class="lvl-{{ homin.lvls.masse2 }}">{{ homin.lvls.masse2 }}</td>
				<td class="lvl-{{ homin.lvls.pique2 }}">{{ homin.lvls.pique2 }}</td>
			{% endif %}
			</tr>
		{% endfor %}
		</table>
	</div>
{% endblock %}