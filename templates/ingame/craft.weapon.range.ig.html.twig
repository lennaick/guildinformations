{% extends "ingame/craft.ig.html.twig" %}

{% block craftSkill %}
	<h5>{{ translate('m.skills.craft.weapon.range') }}</h5>
	<table width="100%">
		<tr align="center" valign="middle">
			<td height="18"><font size="15">{{ translate('m.skills.name') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.weapon.range.pistol') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.weapon.range.mitra') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.weapon.range.lg') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.weapon.range.fusil') }}</font></td>
		</tr>
		{% set count = 0 %}
	{% for homin in homins %}
		{% set count = count+1 %}
		{% set color = "#66330080" %}
		{% if count%2 == 0 %}
			{% set color = "#33333380" %}
		{% endif %}
		<tr align="center" bgcolor="{{ color }}" valign="middle">
			<td height="15"><font size="12">{{ homin.name }}</font></td>
		{% if homin.error %}
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
		{% else %}
			<td>{{ homin.lvls.armeTirHandgun }}</td>
			<td>{{ homin.lvls.armeTirSubmachinegun }}</td>
			<td>{{ homin.lvls.armeTirLg }}</td>
			<td>{{ homin.lvls.armeTirShotgun }}</td>
		{% endif %}
		</tr>
	{% endfor %}
	</table>
{% endblock %}