{% block inventoryMenu %}
	<h3>{{ translate('m.inventory.menu.title') }}</h3>
	<table bgcolor="#000000" border="0" width="100%">
		<tr valign="middle">
			<td height="20">
				<a href="{{ urlFor('ryzomApp-Inventory') }}?checksum={{ checksum }}&user={{ user }}">{{ translate('m.inventory.menu.search') }}</a>
				 | {{ translate('m.inventory.menu.display') }}: 
			{% for guild in guilds %}
				<a href="{{ urlFor('ryzomApp-Inventory/guild', {'guildId': guild.id}) }}?checksum={{ checksum }}&user={{ user }}">{{ guild.name }}</a> - 
			{% endfor %}
			</td>
		</tr>
	</table>
{% endblock %}