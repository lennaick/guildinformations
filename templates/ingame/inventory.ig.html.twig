{% extends "ingame/content.ig.html.twig" %}

{% block content %}
	<a href="{{ urlFor('ryzomApp-Home') }}?checksum={{ checksum }}&user={{ user }}">Retour accueil</a>
	{% for guild in guilds %}
		<h2>{{ guild.guild.name }}</h2>
		<div>
		{% if guild.items.error %}
			<p>Problème de clé</p>
		{% else %}
			{% for item in guild.items %}
				<img src="{{ item.iconUrl }}" style="border: 1px solid #333;" title="{{ item.stack }}x{{ item.name }} (Q{{ item.quality }}{{ item.details }})"/>
			{% endfor %}
		{% endif %}
		</div>
	{% endfor %}
{% endblock content %}