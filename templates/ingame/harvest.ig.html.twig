{% extends "ingame/skills.ig.html.twig" %}

{% block skillContent %}
	<h5>Niveaux de forage</h5>
	<table width="100%">
		<tr align="center" valign="middle">
			<td height="18"><font size="15">Nom</font></td>
			<td><font size="15">Forage en désert</font></td>
			<td><font size="15">Forage en forêt</font></td>
			<td><font size="15">Forage en jungle</font></td>
			<td><font size="15">Forage lacustre</font></td>
			<td><font size="15">Forage en primes racines</font></td>
		</tr>
		{% set count = 0 %}
	{% for homin in homins %}
		{% set count = count+1 %}
		{% set color = "#66330080" %}
		{% if count%2 == 0 %}
			{% set color = "#33333380" %}
		{% endif %}
		<tr align="center" bgcolor="{{ color }}" valign="middle">
			<td height="15"><font size="12">{{ homin.name }}</font></td>
		{% if homin.error %}
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
		{% else %}
			<td>{{ homin.lvls.desert }}</td>
			<td>{{ homin.lvls.forest }}</td>
			<td>{{ homin.lvls.jungle }}</td>
			<td>{{ homin.lvls.lakes }}</td>
			<td>{{ homin.lvls.primes }}</td>
		{% endif %}
		</tr>
	{% endfor %}
	</table>
{% endblock %}