{% extends "ingame/skills.ig.html.twig" %}

{% block skillContent %}
	<h5>{{ translate('m.skills.harvest.title') }}</h5>
	<table width="100%">
		<tr align="center" valign="middle">
			<td height="18"><font size="15">{{ translate('m.skills.name') }}</font></td>
			<td><font size="15">{{ translate('m.skills.harvest.desert') }}</font></td>
			<td><font size="15">{{ translate('m.skills.harvest.forest') }}</font></td>
			<td><font size="15">{{ translate('m.skills.harvest.jungle') }}</font></td>
			<td><font size="15">{{ translate('m.skills.harvest.lakes') }}</font></td>
			<td><font size="15">{{ translate('m.skills.harvest.primes') }}</font></td>
		</tr>
		{% set count = 0 %}
	{% for homin in homins %}
		{% set count = count+1 %}
		{% set color = "#66330080" %}
		{% if count%2 == 0 %}
			{% set color = "#33333380" %}
		{% endif %}
		<tr align="center" bgcolor="{{ color }}" valign="middle">
			<td height="15"><font size="12">{{ homin.name }}</font></td>
		{% if homin.error %}
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
		{% else %}
			<td>{{ homin.lvls.desert }}</td>
			<td>{{ homin.lvls.forest }}</td>
			<td>{{ homin.lvls.jungle }}</td>
			<td>{{ homin.lvls.lakes }}</td>
			<td>{{ homin.lvls.primes }}</td>
		{% endif %}
		</tr>
	{% endfor %}
	</table>
{% endblock %}