{% extends "ingame/craft.ig.html.twig" %}

{% block craftSkill %}
	<h5>Niveaux d'Artisanat en armures lourdes</h5>
	<table width="100%">
		<tr align="center" valign="middle">
			<td height="18"><font size="15">Nom</font></td>
			<td><font size="15">Bottes</font></td>
			<td><font size="15">Gants</font></td>
			<td><font size="15">Casque</font></td>
			<td><font size="15">Pantalon</font></td>
			<td><font size="15">Manches</font></td>
			<td><font size="15">Gilet</font></td>
		</tr>
		{% set count = 0 %}
	{% for homin in homins %}
		{% set count = count+1 %}
		{% set color = "#66330080" %}
		{% if count%2 == 0 %}
			{% set color = "#33333380" %}
		{% endif %}
		<tr align="center" bgcolor="{{ color }}" valign="middle">
			<td height="15"><font size="12">{{ homin.name }}</font></td>
		{% if homin.error %}
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
		{% else %}
			<td>{{ homin.lvls.armureHPied }}</td>
			<td>{{ homin.lvls.armureHMain }}</td>
			<td>{{ homin.lvls.armureHTete }}</td>
			<td>{{ homin.lvls.armureHJambe }}</td>
			<td>{{ homin.lvls.armureHBras }}</td>
			<td>{{ homin.lvls.armureHVentre }}</td>
		{% endif %}
		</tr>
	{% endfor %}
	</table>
{% endblock %}