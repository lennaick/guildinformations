{% extends "ingame/fight.ig.html.twig" %}

{% block fightSkill %}
	<h5>{{ translate('m.skills.fight.melee2.title') }}</h5>
	<table width="100%">
		<tr align="center" valign="middle">
			<td height="18"><font size="15">{{ translate('m.skills.name') }}</font></td>
			<td><font size="15">{{ translate('m.skills.fight.melee2.epee') }}</font></td>
			<td><font size="15">{{ translate('m.skills.fight.melee2.hache') }}</font></td>
			<td><font size="15">{{ translate('m.skills.fight.melee2.masse') }}</font></td>
			<td><font size="15">{{ translate('m.skills.fight.melee2.pique') }}</font></td>
		</tr>
		{% set count = 0 %}
	{% for homin in homins %}
		{% set count = count+1 %}
		{% set color = "#66330080" %}
		{% if count%2 == 0 %}
			{% set color = "#33333380" %}
		{% endif %}
		<tr align="center" bgcolor="{{ color }}" valign="middle">
			<td height="15"><font size="12">{{ homin.name }}</font></td>
		{% if homin.error %}
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
		{% else %}
			<td>{{ homin.lvls.epee2 }}</td>
			<td>{{ homin.lvls.hache2 }}</td>
			<td>{{ homin.lvls.masse2 }}</td>
			<td>{{ homin.lvls.pique2 }}</td>
		{% endif %}
		</tr>
	{% endfor %}
	</table>
{% endblock %}