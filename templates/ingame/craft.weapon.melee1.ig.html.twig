{% extends "ingame/craft.ig.html.twig" %}

{% block craftSkill %}
	<h5>Niveaux d'Artisanat en armes à une main</h5>
	<table width="100%">
		<tr align="center" valign="middle">
			<td height="18"><font size="15">Nom</font></td>
			<td><font size="15">Hache</font></td>
			<td><font size="15">Dague</font></td>
			<td><font size="15">Massue</font></td>
			<td><font size="15">Lance</font></td>
			<td><font size="15">Epée</font></td>
			<td><font size="15">Bâton</font></td>
		</tr>
		{% set count = 0 %}
	{% for homin in homins %}
		{% set count = count+1 %}
		{% set color = "#66330080" %}
		{% if count%2 == 0 %}
			{% set color = "#33333380" %}
		{% endif %}
		<tr align="center" bgcolor="{{ color }}" valign="middle">
			<td height="15"><font size="12">{{ homin.name }}</font></td>
		{% if homin.error %}
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
		{% else %}
			<td>{{ homin.lvls.arme1Hache }}</td>
			<td>{{ homin.lvls.arme1Dague }}</td>
			<td>{{ homin.lvls.arme1Massue }}</td>
			<td>{{ homin.lvls.arme1Lance }}</td>
			<td>{{ homin.lvls.arme1Epee }}</td>
			<td>{{ homin.lvls.arme1Baton }}</td>
		{% endif %}
		</tr>
	{% endfor %}
	</table>
{% endblock %}