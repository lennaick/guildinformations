{% extends "ingame/craft.ig.html.twig" %}

{% block craftSkill %}
	<h5>{{ translate('m.skills.craft.jewel') }}</h5>
	<table width="100%">
		<tr align="center" valign="middle">
			<td height="18"><font size="15">{{ translate('m.skills.name') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.jewel.anneau') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.jewel.bracelet') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.jewel.diademe') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.jewel.boucle') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.jewel.pendentif') }}</font></td>
			<td><font size="15">{{ translate('m.skills.craft.jewel.bague') }}</font></td>
		</tr>
		{% set count = 0 %}
	{% for homin in homins %}
		{% set count = count+1 %}
		{% set color = "#66330080" %}
		{% if count%2 == 0 %}
			{% set color = "#33333380" %}
		{% endif %}
		<tr align="center" bgcolor="{{ color }}" valign="middle">
			<td height="15"><font size="12">{{ homin.name }}</font></td>
		{% if homin.error %}
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
			<td>X</td>
		{% else %}
			<td><font color="{{ getColor(homin.lvls.bijouCheville) }}">{{ homin.lvls.bijouCheville }}</font></td>
			<td><font color="{{ getColor(homin.lvls.bijouPoignet) }}">{{ homin.lvls.bijouPoignet }}</font></td>
			<td><font color="{{ getColor(homin.lvls.bijouTete) }}">{{ homin.lvls.bijouTete }}</font></td>
			<td><font color="{{ getColor(homin.lvls.bijouOreille) }}">{{ homin.lvls.bijouOreille }}</font></td>
			<td><font color="{{ getColor(homin.lvls.bijouCou) }}">{{ homin.lvls.bijouCou }}</font></td>
			<td><font color="{{ getColor(homin.lvls.bijouDoigt) }}">{{ homin.lvls.bijouDoigt }}</font></td>
		{% endif %}
		</tr>
	{% endfor %}
	</table>
{% endblock %}