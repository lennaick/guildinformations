{% extends "ingame/content.ig.html.twig" %}

{% block content %}
{% if error is not null %}
	<p>Votre clé est invalide, veuillez la mettre à jour.<br></p>
{% endif %}
<form action="{{ urlFor('ryzomApp-HominKey.post') }}" method="POST">
	<input type="hidden" value="{{ user }}" name="user" />
	<input type="hidden" value="{{ checksum }}" name="checksum" />
	<h5>Entrez votré clé api* :</h5>
<pre>    <input type="text" value="{{ apiKey }}" name="apiKey" size="155"/></pre>
	{% set value = "Mettre à jour" %}
	{% if apiKey is null %}
		{% set value = "Enregistrer" %}
	{% endif %}
	<br>
	<br>
<pre>    <input type="submit" value="{{ value }}"/></pre>
</form>
<br>
<br>
<pre>    * clé avec l'option "P02 Compétences"</pre>
{% endblock %}