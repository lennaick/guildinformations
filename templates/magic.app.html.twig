{% extends "skills.app.html.twig" %}

{% block title %}
	{{ parent() }} - Niveaux de Magie
{% endblock title %}

{% block pageTitle %}Niveaux de Magie{% endblock pageTitle %}

{% block skillContent %}
	<div class="top">
		<table class="skill-table">
			<tr>
				<td>Nom</td>
				<td>Magie Curative</td>
				<td>Magie Neutralisante</td>
				<td>Magie Élémentaire</td>
				<td>Magie Débilitante</td>
			</tr>
		{% for homin in homins %}
			<tr>
				<td>{{ homin.name }}</td>
			{% if homin.error %}
				<td>X</td>
				<td>X</td>
				<td>X</td>
				<td>X</td>
			{% else %}
				<td>{{ homin.lvls.heal }}</td>
				<td>{{ homin.lvls.neutra }}</td>
				<td>{{ homin.lvls.off }}</td>
				<td>{{ homin.lvls.debi }}</td>
			{% endif %}
			</tr>
		{% endfor %}
		</table>
	</div>
{% endblock %}