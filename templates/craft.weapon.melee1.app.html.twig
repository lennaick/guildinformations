{% extends "craft.app.html.twig" %}

{% block title %}
	{{ parent() }} - Niveaux d'Artisanat en armes à une main
{% endblock title %}

{% block pageTitle %}
	Niveaux d'Artisanat en armes à une main
{% endblock pageTitle %}

{% block craftSkill %}
	<div class="top">
		<table class="skill-table">
			<tr>
				<td>Nom</td>
				<td>Hache</td>
				<td>Dague</td>
				<td>Massue</td>
				<td>Lance</td>
				<td>Epée</td>
				<td>Bâton</td>
			</tr>
		{% for homin in homins %}
			<tr>
				<td>{{ homin.name }}</td>
			{% if homin.error %}
				<td>X</td>
				<td>X</td>
				<td>X</td>
				<td>X</td>
				<td>X</td>
				<td>X</td>
			{% else %}
				<td class="lvl-{{ homin.lvls.arme1Hache }}">{{ homin.lvls.arme1Hache }}</td>
				<td class="lvl-{{ homin.lvls.arme1Dague }}">{{ homin.lvls.arme1Dague }}</td>
				<td class="lvl-{{ homin.lvls.arme1Massue }}">{{ homin.lvls.arme1Massue }}</td>
				<td class="lvl-{{ homin.lvls.arme1Lance }}">{{ homin.lvls.arme1Lance }}</td>
				<td class="lvl-{{ homin.lvls.arme1Epee }}">{{ homin.lvls.arme1Epee }}</td>
				<td class="lvl-{{ homin.lvls.arme1Baton }}">{{ homin.lvls.arme1Baton }}</td>
			{% endif %}
			</tr>
		{% endfor %}
		</table>
	</div>
{% endblock %}